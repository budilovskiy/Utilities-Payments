<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="false"
    android:longClickable="false"
    android:background="@android:color/white"
    android:id="@+id/service_layout"
    android:padding="8dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:id="@+id/twName"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            android:textSize="18sp"
            android:maxLines="2"
            android:lines="2"
            android:longClickable="false"
            android:layout_weight="1" />

        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:text="00.00"
            android:id="@+id/twSum"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/abc_primary_text_material_light"
            android:gravity="top|right" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Current data"
                android:id="@+id/twCurrentTitle"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Previous data"
                android:id="@+id/twPreviousTitle"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Difference"
                android:id="@+id/twDifferenceTitle"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:gravity="end">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"
                android:id="@+id/twCurrent"
                android:textColor="@android:color/primary_text_light"
                android:textSize="12sp"
                android:gravity="right" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:id="@+id/twPreviouus"
                android:textColor="@android:color/primary_text_light"
                android:textSize="12sp"
                android:gravity="end" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:id="@+id/twDifference"
                android:textColor="@android:color/primary_text_light"
                android:textStyle="bold"
                android:textSize="12sp"
                android:gravity="right" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rate"
                android:id="@+id/twRateLabel"
                android:gravity="right"
                android:textSize="12sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="0.00"
                android:id="@+id/twRate"
                android:textColor="@android:color/primary_text_light"
                android:textSize="14sp"
                android:gravity="bottom|right"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>